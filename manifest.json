{
  "name": "Jump To Recipe",
  "description": "Extracts only the recipe from any recipe page, without any life stories or clutter.",
  "homepage_url": "https://github.com/llagerlof/fresh-chrome-extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Jump To Recipe",
    "default_popup": "menu.html"
  },
  "content_scripts": [
    {
      "run_at" : "document_start",
      "js": ["before.js"],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    },
    {
      "run_at" : "document_end",
      "js": ["end.js"],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    },
    {
      "run_at" : "document_idle",
      "js": ["after.js"],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    },
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "css": ["styles.css"],
      "js": ["thirdParty/jquery-3.6.0.min.js","main.js"],
      "html": ["popup.html"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://onlyrecipe.herokuapp.com/*"
  ],
  "icons": { "16": "/icons/icon16.png", "48": "/icons/icon128.png", "128": "/icons/icon128.png" },
  "web_accessible_resources": [
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "resources": [
        "popup.html",
        "/images/*"
      ]
    }
  ]
}
